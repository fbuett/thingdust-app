
  <!-- Content Wrapper. Contains page content -->
  <div class="hold-transition skin-blue">

    <!-- Main content -->
    <section class="content">

    <!-- Your Page Content Here -->
    
      <!-- Content Header (Page header) -->

      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            
            <div class="box-header">
              <h3 class="box-title">Sensors</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-toggle="modal" data-target="#addSensor"><i class="fa fa-plus-square"></i></button> 
                <button type="button" class="btn btn-box-tool" ><i class="fa fa-list-ol"></i></button>
                <button type="button" class="btn btn-box-tool" data-target="tableGrid"><i class="fa fa-th-large"></i></button>
              </div>

              <!-- Add Sensor Modal -->
              <!-- Modal -->
              <div id="addSensor" class="modal fade" role="dialog">
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                      <p>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>

                </div>
              </div>

            </div>
            <!-- /.box-header -->

            <div class="box-body table-responsive no-padding">
              <table id="sensors" class="table table-hover">
                <thead>
                  <tr>
                    <th>DevEUI</th>
                    <th>Last Seen</th>
                    <th>Occupation</th>
                    <th>Temperature</th>
                    <th>Humidity</th>
                  </tr>
                </thead>
              </table>
            </div>
            <!-- /.box-body -->
          
          </div>
          <!-- /.box -->
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            
            <div class="box-header">
              <h3 class="box-title">Chart</h3>
            </div>
            <!-- /.box-header -->
            
            <div class="box-body ">
              <canvas id="tempChart" width="400" height="200"></canvas>
            </div>

          </div>
          <!-- /.box -->

          <div class="box box-primary">
            
            <div class="box-header">
              <h3 class="box-title">Chart</h3>
            </div>
            <!-- /.box-header -->
            
            <div class="box-body ">
              <canvas id="humChart" width="400" height="200"></canvas>
            </div>

          </div>
          <!-- /.box -->
                              
        </div>
      </div>            

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <% block('localScripts', '<script src="/js/thingdust/sensors.js"></script>') %>
